                @Html.EditorFor(model => model.AgentData.Host, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AgentData.Host, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AgentData.Port, htmlAttributes: new {@class = "control-label col-md-2"})
